{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "installCommand": "npm install --legacy-peer-deps",
  "rewrites": [
    {
      "source": "/((?!assets/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*\\.js)$",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "s-maxage=31536000,immutable"
        }
      ]
    },
    {
      "source": "/assets/(.*\\.css)$",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "s-maxage=31536000,immutable"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=31536000,immutable"
        }
      ]
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://collaboreumplatform-production.up.railway.app/api",
    "REACT_APP_API_URL": "https://collaboreumplatform-production.up.railway.app/api",
    "REACT_APP_ENVIRONMENT": "production"
  },
  "build": {
    "env": {
      "VITE_API_BASE_URL": "https://collaboreumplatform-production.up.railway.app/api",
      "REACT_APP_API_URL": "https://collaboreumplatform-production.up.railway.app/api",
      "REACT_APP_ENVIRONMENT": "production"
    }
  }
}

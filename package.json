  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "check:types": "tsc -p tsconfig.json --noEmit",
    "check:build": "react-scripts build",
    "check:lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings 0",
    "check:format": "prettier --check .",
    "check:test": "react-scripts test --coverage --watchAll=false",
    "check:accessibility": "react-scripts test --testPathPattern=a11y.test.ts --watchAll=false",
    "check:deadcode": "ts-prune --ignore 'src/**/__tests__/**'",
    "check:deps": "knip",
    "check:colors": "powershell -ExecutionPolicy Bypass -File scripts/check-colors.ps1",
    "check:env": "node scripts/validate-env.cjs",
    "check:openapi": "node scripts/validate-openapi.cjs || exit 0",
    "check:all": "npm-run-all -l check:env check:types check:lint check:format check:test check:accessibility check:deadcode check:deps check:colors check:build",
    "fix:format": "prettier --write .",
    "fix:lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "orphan:check": "node scripts/find-orphan-pages.js",
    "orphan:prune": "node scripts/prune-orphan-pages.js",
    "migrate:components": "node scripts/migrate-components.js",
    "find:unused": "node scripts/find-unused-components.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:a11y": "node scripts/test-a11y.js",
    "test:a11y:coverage": "node scripts/test-a11y.js --coverage"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(.*\\.mjs$))"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
